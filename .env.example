# MCP Server Foundation Configuration
# Copy this file to .env and customize for your environment

# Core Settings
SERVER_NAME=mcp-server-foundation
DEPLOYMENT_MODE=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server Settings
HOST=127.0.0.1
PORT=8000
RELOAD=true
WORKERS=1

# Security Settings
AUTH_ENABLED=false
OAUTH_PROVIDER_URL=
API_KEY_HEADER=X-API-Key
SECRET_KEY=dev-secret-key-change-in-production

# Performance Settings
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30.0
CACHE_TTL=3600

# Database Settings (Development)
DATABASE_URL=sqlite:///./data/mcp.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings (Optional)
REDIS_URL=
REDIS_SSL=false
REDIS_DB=0

# Storage Settings
STORAGE_BACKEND=local
STORAGE_PATH=./data/storage
STORAGE_BUCKET=
STORAGE_REGION=

# Observability Settings
ENABLE_METRICS=true
ENABLE_TRACING=true
TRACING_ENDPOINT=
METRICS_PATH=/metrics

# Development Settings
USE_FILE_WATCHER=true
AUTO_CREATE_TABLES=true

# Security Scanning Settings
# Safety CLI API Key for vulnerability scanning
# Get your key from: https://pyup.io/safety/api/
SAFETY_API_KEY=your-safety-api-key-here
